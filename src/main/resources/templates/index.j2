{% extends "templates/base.j2" %}

{% block title %}Index{% endblock %}

{% block content %}
<div class="row">
	<div class="col-md-6 offset-md-3">
		<p>Program Samples:</p>
		<ul>
			{% for sample in samples %}
			{% if sample.implemented %}
			<li><a href="/samples/view/{{ sample.id }}">{{ sample.name }}</a></li>
			{% else %}
			<li>{{ sample.name }}</li>
			{% endif %}
			{% endfor %}
		</ul>
		{% if mode == "full" %}
		<p>Program Submissions:</p>
		<ul>
			{% for program in programs %}
			<li><a href="/programs/view/{{ program.id }}">{{ program.id }}</a></li>
			{% endfor %}
		</ul>
		<p>
			<a href="/programs/new">Create a program</a>
		</p>
		{% endif %}
	</div>
</div>
{% endblock %}